# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Use the bento/ubuntu-24.04 box with checksum verification
  config.vm.box = "bento/ubuntu-24.04"
  config.vm.box_check_update = false # Skip version check to save time
  
  # Disable the default /vagrant synced folder if not needed
  config.vm.synced_folder ".", "/vagrant", disabled: true
  
  # Minimal provisioning to speed up initial boot
  config.vm.provision "shell", inline: <<-SHELL
    echo "Minimal provisioning complete"
  SHELL
  
  # VirtualBox specific optimizations
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 2
    vb.gui = false
    
    # Performance optimizations
    vb.customize ["modifyvm", :id, "--ioapic", "on"]
    vb.customize ["modifyvm", :id, "--rtcuseutc", "on"]
    vb.customize ["modifyvm", :id, "--vtxvpid", "on"]
    vb.customize ["modifyvm", :id, "--hwvirtex", "on"]
    vb.customize ["modifyvm", :id, "--nestedpaging", "on"]
    vb.customize ["modifyvm", :id, "--largepages", "on"]
  end
  
  # Parallel operations where possible
  config.vm.boot_timeout = 600 # 10 minute timeout
  config.ssh.insert_key = false # Faster SSH connections
end